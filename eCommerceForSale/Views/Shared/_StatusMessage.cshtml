@{
    var type = (string)TempData["_alert.type"];
    var message = (string)TempData["_alert.message"];
}
@if (!string.IsNullOrEmpty(type) && !string.IsNullOrEmpty(message))
{
    @*<script type="text/javascript">toastr.success("@TempData["_alert.message"]");</script>*@

    <script type="text/javascript">
            switch ("@type") {
                     case 'success':
                         toastr.success("@message");
                         break;
                     case 'danger':
                         toastr.danger("@message");
                         break;
                     case 'info':
                         toastr.info("@message");
                         break;
                     case 'warning':
                         toastr.warning("@message");
                         break;
                 }
    </script>
}