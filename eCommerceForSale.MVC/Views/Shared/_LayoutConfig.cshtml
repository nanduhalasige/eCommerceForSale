@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <div class="bg-primary" style="border-top-left-radius: 20px; min-height:80vh; max-height:80vh;overflow-y:auto">
                <div class="row m-2">
                    <a role="button"
                       class="mt-4 ml-auto mr-auto config-button text-white-50 pointer @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Company" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Company"
                       asp-action="Index">
                        <i class="fas fa-building fa-2x"></i>
                        <h6>Company</h6>
                    </a>
                    <a role="button"
                       class="mt-4 ml-auto mr-auto config-button text-white-50 pointer @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Category" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Category"
                       asp-action="Index">
                        <i class="fas fa-project-diagram fa-2x"></i>
                        <h6>Category</h6>
                    </a>
                    <a role="button"
                       class="mt-4 ml-auto mr-auto config-button text-white-50 pointer @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Products"
                       asp-action="Index">
                        <i class="fas fa-shopping-basket fa-2x"></i>
                        <h6>Products</h6>
                    </a>
                    <a role="button"
                       class="mt-4 ml-auto mr-auto config-button text-white-50 pointer @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Users"
                       asp-action="Index">
                        <i class="fas fa-users fa-2x"></i>
                        <h6>Users</h6>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-10">
            <div class="bg-light overflow-auto" style="border-top-right-radius: 20px; min-height:80vh;max-height:80vh; ">
                <div class="row m-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("_Scripts", required: false)
}