@{
    Layout = "~/Views/Shared/_LayoutConfig.cshtml";
}

<div class="container mb-4 ml-3">
    <div class="row mb-4 mt-3 mr-3 justify-content-end">
        <a role="button"
           class="btn btn-outline-info"
           asp-area="Identity"
           asp-page="/Account/Register">
            <i class="fas fa-plus"></i>  Add New User
        </a>
    </div>
    <table id="UsersTable" class="ui celled table text-center" style="width:100%">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone No</th>
                <th>Role</th>
                <th>Lock/Unlock</th>
            </tr>
        </thead>
    </table>
</div>

