@{
    ViewData["Title"] = "Not Found";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-center">
                <img src="~/asset/images/NotFound.svg" alt="not found" height="250" />
            </div>
        </div>
    </div>
    <div class="text-danger text-center"><h3>@ViewBag.ErrorMessage</h3></div>
</div>

<a role="button" class="btn btn-outline-secondary" asp-area="Customer" asp-controller="Home" asp-action="Index">Return to Home</a>